%% -*- erlang -*-
%% Config file for can-applicatione
{deps_dir, ["deps"]}.
{deps, [{uart,"0.1"},
	{eapi, "1.0"},
	{lager, "1.0.0.fl.2"}
       ]}.
{erl_opts, [debug_info, fail_on_warning]}.
{require_otp_vsn, "R14|R15"}.
{sub_dirs, ["src"]}.
{port_env, [
	    {"CFLAGS", "$CFLAGS -I ../eapi/include"},
	    {"LDFLAGS", "$LDFLAGS ../eapi/c_src/eapi_drv_lib.o"},
	    {"ERL_LDFLAGS", ""}
	   ]}.
{port_specs, [
	      {"linux","priv/can_sock_drv.so",["c_src/*.c"]}
	     ]}.
